@model List<BookShop.Data.Models.Users>

@{
    ViewData["Title"] = "QL_NguoiDung Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .invalid-feedback {
        display: none;
        color: #dc3545;
        margin-top: 0.25rem;
    }

    .is-invalid {
        border-color: #dc3545;
    }
</style>

@await Html.PartialAsync("response")

